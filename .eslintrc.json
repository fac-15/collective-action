{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": [
      "node",
      "prettier",
      "eslint:recommended"
    ],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": 2016,
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "off",
        "import/no-nodejs-modules": "off",
        "no-console": "off",
        "import/no-commonjs": "off",
        "sourceType": "module",
        "global-require": "error",
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
