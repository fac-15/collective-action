  <h3 class='h3-title explore-h3'>Organizations to Follow</h3>
  <div class="explore-carousel">
        <button class="prev">
          <div class="fas fa-chevron-circle-left"></div>
          <span class="offscreen">Previous</span>
        </button>
    <ul class="carousel-content">
        {{#each organisations}}
          <li class="hidden"><a href="{{url}}" target="_blank" class="explore-a highlight">{{name}}</a></li>
